<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travelling" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greyTint</item>
        <item name="colorPrimaryVariant">@color/greyTint</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/greyTint</item>
        <item name="android:windowLightStatusBar">@color/pink</item>

        <!-- Customize your theme here. -->
        <item name="appTravellingH1">@style/TextAppearance.Travelling.Headline1</item>
        <item name="appTravellingH2">@style/TextAppearance.Travelling.Headline2</item>
        <item name="appTravellingH3">@style/TextAppearance.Travelling.Headline3</item>
        <item name="appTravellingH4">@style/TextAppearance.Travelling.Headline4</item>
        <item name="appTravellingH5">@style/TextAppearance.Travelling.Headline5</item>
        <item name="appTravellingB1">@style/TextAppearance.Travelling.Body1</item>
        <item name="appTravellingB2">@style/TextAppearance.Travelling.Body2</item>
        <item name="appTravellingButton">@style/TextAppearance.Travelling.Button</item>

        <item name="appTravellingBtnIconOnly">@style/Widget.App.Button.OutlinedButton.IconOnly</item>
    </style>
